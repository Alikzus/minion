#!/bin/sh
#
# check-host -- check if one or several hosts are alive and use pushover to send
#               a notification upon a negative response
#
# Usage: check-host hostname
#        check-host -f config-file
#
# Copyright (c) 2015-2016, Joel A. Nilsson <joel@alikzus.se>
#
# Permission to use, copy, modify, and/or distribute this software for any
# purpose with or without fee is hereby granted, provided that the above
# copyright notice and this permission notice appear in all copies.
#
# THE SOFTWARE IS PROVIDED "AS IS" AND THE AUTHOR DISCLAIMS ALL WARRANTIES WITH
# REGARD TO THIS SOFTWARE INCLUDING ALL IMPLIED WARRANTIES OF MERCHANTABILITY AND
# FITNESS. IN NO EVENT SHALL THE AUTHOR BE LIABLE FOR ANY SPECIAL, DIRECT,
# INDIRECT, OR CONSEQUENTIAL DAMAGES OR ANY DAMAGES WHATSOEVER RESULTING FROM
# LOSS OF USE, DATA OR PROFITS, WHETHER IN AN ACTION OF CONTRACT, NEGLIGENCE OR
# OTHER TORTIOUS ACTION, ARISING OUT OF OR IN CONNECTION WITH THE USE OR
# PERFORMANCE OF THIS SOFTWARE.
#

################################################################################
# PRAGMAS
################################################################################

set -u
trap "abort" HUP INT QUIT TERM

################################################################################
# CONSTANTS
################################################################################

NAME="check-host"
_TMPDIR="/tmp/${NAME}"

################################################################################
# SUBROUTINES
################################################################################

abort() {
    say "Aborted"
    exit 1
}

error() {
    fault "$1"
    abort
}

fault() {
    echo "!!! ${*}"
}

say() {
    echo "==> ${*}"
}

usage() {
    echo
    echo "Usage: ${NAME} [-f] filename/host" >&2
    echo
    echo "Options:"
    echo "    -f    config file with hosts et cetera"
    echo
    exit 1
}

quit() {
    say "$1"
    exit 0
}

#===============================================================================

# ping_host $hostname $number-of-tries 
ping_host() {
    /sbin/ping -c "$2" -q "$1" > /dev/null
}

poke_master() {
    # If a master site is defined, check if it is alive. Skip otherwise.
    if ! [ -z "${master}" ]; then
        ping_host "${master}" 3 

        # If the master is alive, let it do the job -- do NOT continue.
        if [ $? -eq 0 ]; then
            quit "Nothing to be done"
        else
            say "The master is not responding"
        fi
    else
        say "No master was defined"
    fi
}

# send_msg $message
send_msg() {
    # Pushover format: title message
    /usr/local/bin/pushover "$(/bin/hostname -s)" "$1" > /dev/null
}

#===============================================================================

check_response() {
    cache="${_TMPDIR}/$1"

    tries=0

    while [ ${tries} -lt 60 ]; do
        ping_host "$1" 1
        if [ $? -eq 0 ]; then
            got_response=1
            break
        else
            got_response=0
        fi
        tries=$((tries + 1))
        sleep 1
    done

    if [ "${got_response}" -eq 0 ]; then
        no_response "$1"
    else
        response "$1"
    fi
}

no_response() {
    if [ -f "${cache}" ]; then
        count="$(cat "${cache}")"

        if [ "${count}" -le 12 ]; then
            time=60
        elif [ "${count}" -gt 12 ] && [ "${count}" -le 18 ]; then
            time=120
        else
            time=720
        fi

        if [ "$(/usr/bin/find "${cache}" -mmin +${time})" ]; then
            count=$((count + 1))
            echo "${count}" > "${cache}"
            send_msg "$1 is still NOT responding to pings"
        fi
    else
        echo "1" > "${cache}"
        send_msg "$1 is NOT responding to pings"
    fi
}

response() {
    if [ -f "${cache}" ]; then
        /bin/rm "${cache}" | fault "Could NOT clear the cache"
        send_msg "$1 has started to respond to pings again"
    fi
}

################################################################################
# MAIN
################################################################################

if [ "$(/usr/bin/id -u)" -eq 0 ]; then
    error "You should NOT run ${NAME} with root privileges"
fi

file_is_specified=0
master=""
hosts=""

while getopts 'f' arg; do
    case ${arg} in
    f)  file_is_specified=1 ;;
    *)  usage ;;
    esac
done

# Create a temporary cache if it does NOT exist.
if ! [ -d "${_TMPDIR}" ]; then
    /bin/mkdir "${_TMPDIR}" | error "Could NOT create the temporary cache"
fi

if [ "${file_is_specified}" -eq 1 ]; then
    config_file="$2"

    if [ -f "${config_file}" ]; then
        # shellcheck source=/dev/null
        . "${config_file}"
    else
        error "The config file ${config_file} is invalid"
    fi

    poke_master

    if ! [ -z "${hosts}" ]; then
        # Loop through all defined hosts.
        for host in ${hosts}; do
            check_response "${host}"
        done
    else
        error "No hosts are defined"
    fi

else
    check_response "$1"
fi

quit "Done"

################################################################################
